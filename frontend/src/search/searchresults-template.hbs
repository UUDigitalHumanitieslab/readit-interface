<p class="search-resultcount">{{results.length}} hits:</p>
{{#each results}}
<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="searchresult-details">
                <strong>{{this.attributes.text}}</strong>
                <p>Source: {{this.attributes.source.name}}</p>
                <p>Published: {{this.attributes.source.date}}</p>
            </div>

        </div>
        <div class="media-right">
            <p>
                {{#each this.attributes.tags}}
                <div class="tag is-medium tag-{{this.className}}">{{this.name}}</div>
                {{/each}}
            </p>
            <div class="searchresult-icons">
                <nav class="level is-mobile">
                    <div class="level-right">
                        <a class="level-item" aria-label="comment">
                            <span class="icon is-small has-text-black tooltip" data-tooltip="Add a comment">
                                <i class="far fa-comment" aria-hidden="true"></i>
                            </span>
                        </a>
                        <a class="level-item" aria-label="like">
                            <span class="icon is-small has-text-black tooltip" data-tooltip="Add to a collection">
                                <i class="far fa-heart" aria-hidden="true"></i>
                            </span>
                        </a>
                    </div>
                </nav>
            </div>
        </div>

    </article>
</div>
{{/each}}