PREFIX oa: <http://www.w3.org/ns/oa#>
PREFIX schema: <>
CONSTRUCT { ?annotation ?p ?o }
WHERE {
 ?annotation    ?p              ?o              ;
  	            a 		        oa:Annotation   ;
 	            oa:hasTarget    ?x              .
 ?x             oa:hasSource    {{sourceURI}}   .
 ?annotation    oa:dateCreated  ?date .
 {{#if userHasLimitedRights}}
 ?annotation    schema:creator  {{userURI}}
 {{/if }}
}
LIMIT {{resultsPerPage}}
{{#if fromResult}}
OFFSET {{fromResult}}
ORDER BY ?date
{{/if }}

