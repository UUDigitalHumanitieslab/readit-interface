<p class="search-resultcount">{{results.length}} hits:</p>
{{#each results}}
<div class="box searchresult-resultbox" c_id="{{this.cid}}">
    <article class="columns">
        <div class="column is-narrow">
            <div class="tag is-medium is-dark">source</div>
        </div>
        <div class="column searchresult-right">
            <div class="searchresult-details">
                <p><strong>{{this.source.attributes.name}} ({{this.source.attributes.publicationDate}})</strong></p>
                <br />
                <p>{{this.fragment.text_short}}</p>
            </div>
        </div>
    </article>
    <div class="columns">
        <div class="column searchresult-right">
            <div class="searchresult-icons">
                <nav class="level is-mobile">
                    <div class="level-right">
                        <a class="level-item" aria-label="comment">
                            <span class="icon is-small has-text-black tooltip" data-tooltip="Add a comment">
                                <i class="far fa-comment" aria-hidden="true"></i>
                            </span>
                        </a>
                        <a class="level-item" aria-label="like">
                            <span class="icon is-small has-text-black tooltip" data-tooltip="Add to a collection">
                                <i class="far fa-heart" aria-hidden="true"></i>
                            </span>
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
{{/each}}
<div id="result-detail-container"></div>