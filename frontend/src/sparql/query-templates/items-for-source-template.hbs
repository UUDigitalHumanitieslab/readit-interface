{{#each namespaces}}
PREFIX {{this.label}}: <{{this.prefix}}>
{{/each}}
PREFIX schema: <http://schema.org/>
PREFIX oa: <http://www.w3.org/ns/oa#>
CONSTRUCT { ?annotation ?p ?o }
WHERE {
    VALUES ?category { oa:Annotation oa:SpecificResource oa:TextQuoteSelector oa:TextPositionSelector }
	?item 	        ?p 				?o 				;
  	            	a 		        ?category       ;
 	        		oa:hasTarget    ?x              .
	?x 				oa:hasSource 	<{{sourceURI}}> .
	{{#if userURI}}
	?annotation 	schema:creator 	<{{userURI}}> 	.
	{{/if}}
}
{{#if orderBy}}{{orderBy}}{{/if}}
{{#if limit}}LIMIT {{limit}}{{/if}}
{{#if offset}}OFFSET {{offset}}{{/if}}