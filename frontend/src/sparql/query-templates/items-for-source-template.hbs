{{#each namespaces}}
PREFIX {{this.label}}: <{{this.prefix}}>
{{/each}}
PREFIX schema: <http://schema.org/>
PREFIX oa: <http://www.w3.org/ns/oa#>
CONSTRUCT { 
	?annotation 	a 	oa:Annotation 			.
	?resource   	a 	oa:SpecificResource 	.
	?quoteSelector	a   oa:TextQuoteSelector 	.
	?posSelector	a   oa:TextPositionSelector .
	}
WHERE {
	?annotation		oa:hasTarget 	?resource 		. 
	?resource 		oa:hasSelector  ?quoteSelector  ,
									?posSelector	;
					oa:hasSource 	<{{sourceURI}}>	.
	{{#if userURI}}
	?annotation 	schema:creator 	<{{userURI}}> 	.
	{{/if}}
}
{{#if orderBy}}{{orderBy}}{{/if}}
{{#if limit}}LIMIT {{limit}}{{/if}}
{{#if offset}}OFFSET {{offset}}{{/if}}