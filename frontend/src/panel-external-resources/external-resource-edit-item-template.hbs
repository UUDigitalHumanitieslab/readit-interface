<h5 class="title is-5">{{label}}</h5>
{{#each urls}}
    <div class="field has-addons">
        <p class="control">
            <input class="input" type="text" value="{{this}}">
        </p>
        <p class="control">
            <button type=button class="button is-danger remove">
                 <span>Remove</span>
                <span class="icon is-small"><i class="fas fa-times"></i></span>
            </button>
        </p>
    </div>
{{/each}}
<div class="field add-external">
    <div class="control">
        <button type=button class="button add">
        <span>Add</span>
        <span class="icon is-small">
            <i class="fas fa-plus"></i>
        </span>
        </button>
    </div>
</div>