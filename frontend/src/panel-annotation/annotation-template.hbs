<div class="panel-header">
    <header>
        <aside>{{! label view will be inserted here }}</aside>
        <h3 class="title is-3">{{label}}</h3>
        <h5 class="subtitle is-5">{{!
            source link
        }}{{#if model.attributes.annotation }}, {{#if model.attributes.item }}
            identified as
            {{else}}
            unidentified
        {{/if}}{{/if}}{{!
            item link
        }}</h5>
    </header>
</div>
<div class="panel-content">
    <section class="item-sections">
        <article class="item-section">
            <div class="item-section-header">
                <p>Item properties</p>
            </div>
            <table class="table is-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each properties}}
                    <tr>
                        <td>{{@key}}</td>
                        <td>{{this}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </article>
    </section>

    <section class="metadataContainer"></section>

    <section class="item-sections">
        {{#if model.attributes.item}}
        <article class="item-section has-mt-10">
            <div class="item-section-header" id="btnRelItems">
                <p>Related items</p>
                <span class="icon is-large has-text-primary tooltip is-tooltip-left"
                    data-tooltip="Open related items">
                    <i class="fas fa-arrow-circle-right"></i>
                </span>
            </div>
        </article>
        <article class="item-section has-mt-10">
            <div class="item-section-header" id="btnAnnotations">
                <p>{{#if model.attributes.annotation }}
                    Other annotations
                {{else}}
                    Annotations
                {{/if}}</p>
                <span class="icon is-large has-text-primary tooltip is-tooltip-left"
                    data-tooltip="Open annotations">
                    <i class="fas fa-arrow-circle-right"></i>
                </span>
            </div>
        </article>
        <article class="item-section has-mt-10">
            <div class="item-section-header" id="btnExtResources">
                <p>External resources</p>
                <span class="icon is-large has-text-primary tooltip is-tooltip-left"
                    data-tooltip="Open external resources">
                    <i class="fas fa-arrow-circle-right"></i>
                </span>
            </div>
        </article>
        {{/if}}
    </section>
</div>
{{#if model.attributes.annotation}}
<div class="panel-footer">
    <nav class="level is-mobile">
        <div class="level-left">
            <div class="level-item">
                <button type=button class="button btn-edit">Edit</button>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <button id="btnNewAnnotation" type=button class="button btn-new">New</button>
            </div>
        </div>
    </nav>
</div>
{{/if}}

