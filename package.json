{
  "name": "READ-IT-application",
  "version": "0.0.0",
  "description": "Public interface for READ-IT",
  "repository": "https://github.com/github:UUDigitalHumanitieslab/readit-interface",
  "author": "UU Digital Humanities Lab",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "front": "cd frontend ; ",
    "back": "cd backend ; ",
    "func": "cd functional-tests ; ",
    "fyarn": "yarn front yarn",
    "preinstall-back": "pip install pip-tools psycopg2 --no-binary psycopg2",
    "install-back": "yarn preinstall-back && yarn back pip install -r requirements.txt",
    "install-func": "yarn func pip install -r requirements.txt",
    "postinstall": "yarn fyarn && yarn install-back",
    "gulp": "yarn front yarn gulp",
    "django": "yarn back python manage.py",
    "test-front": "yarn gulp unittest",
    "test-back": "yarn back pytest",
    "test-func": "yarn install-func && yarn func pytest",
    "test": "yarn test-back && yarn test-front && test-func",
    "watch-front": "yarn gulp watch --config ../config.json",
    "start-front": "yarn gulp clean && yarn watch-front",
    "start-back": "yarn django runserver --settings settings --pythonpath ..",
    "livereload-back": "yarn django livereload --settings settings --pythonpath ..",
    "watch-test-back": "yarn test-back --looponfail",
    "watch-back": "yarn livereload-back & yarn watch-test-back",
    "start": "yarn start-front & yarn start-back & yarn watch-back",
    "dist": "yarn gulp dist",
    "dist-p": "yarn dist --production --config ../config.json",
    "collectstatic-p": "yarn django collectstatic -v 0 --settings production --pythonpath ..",
    "static-p": "yarn gulp clean && yarn dist-p && rm -rf static && yarn collectstatic-p",
    "serve-front-p": "yarn gulp serve --proxy ../proxy.json --root ..",
    "serve-back-p": "yarn django runserver --settings production --pythonpath ..",
    "serve-p": "yarn serve-front-p & yarn serve-back-p",
    "start-p": "yarn static-p && yarn serve-p"
  }
}
